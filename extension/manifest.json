{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "0.1.0",
  "default_locale": "es",
  "action": {
    "default_title": "__MSG_appName__",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "https://login.microsoftonline.com/*",
    "https://graph.microsoft.com/*",
    "https://sellercentral.amazon.com/*",
    "https://sellercentral.amazon.com.mx/*",
    "https://sellercentral.amazon.ca/*",
    "https://sellercentral.amazon.co.uk/*",
    "https://sellercentral.amazon.es/*",
    "https://sellercentral.amazon.de/*",
    "https://sellercentral.amazon.fr/*",
    "https://sellercentral.amazon.it/*",
    "https://sellercentral.amazon.co.jp/*",
    "https://sellercentral.amazon.com.au/*",
    "https://sellercentral.amazon.com.br/*",
    "https://sellercentral.amazon.in/*",
    "https://sellercentral.amazon.com.tr/*",
    "https://sellercentral.amazon.ae/*",
    "https://sellercentral.amazon.sa/*",
    "https://sellercentral.amazon.eg/*",
    "https://sellercentral.amazon.sg/*",
    "https://*.office.com/*",
    "https://*.live.com/*",
    "https://onedrive.live.com/*",
    "https://*.sharepoint.com/*",
    "https://officeapps.live.com/*",
    "https://*.officeapps.live.com/*",
    "https://excel.officeapps.live.com/*",
    "https://excel.office.com/*",
    "https://excel.cloud.microsoft.com/*",
    "https://excel.cloud.microsoft/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://sellercentral.amazon.com/*",
        "https://sellercentral.amazon.com.mx/*",
        "https://sellercentral.amazon.ca/*",
        "https://sellercentral.amazon.co.uk/*",
        "https://sellercentral.amazon.es/*",
        "https://sellercentral.amazon.de/*",
        "https://sellercentral.amazon.fr/*",
        "https://sellercentral.amazon.it/*",
        "https://sellercentral.amazon.co.jp/*",
        "https://sellercentral.amazon.com.au/*",
        "https://sellercentral.amazon.com.br/*",
        "https://sellercentral.amazon.in/*",
        "https://sellercentral.amazon.com.tr/*",
        "https://sellercentral.amazon.ae/*",
        "https://sellercentral.amazon.sa/*",
        "https://sellercentral.amazon.eg/*",
        "https://sellercentral.amazon.sg/*"
      ],
      "js": ["content/amazon_seller.js"]
    },
    {
      "matches": [
        "https://*.office.com/*",
        "https://*.live.com/*",
        "https://onedrive.live.com/*",
        "https://*.sharepoint.com/*",
        "https://officeapps.live.com/*",
        "https://*.officeapps.live.com/*",
        "https://excel.officeapps.live.com/*",
        "https://excel.office.com/*",
        "https://excel.cloud.microsoft.com/*",
        "https://excel.cloud.microsoft/*"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "match_origin_as_fallback": true,
      "js": ["content/excel_online.js"]
    }
  ]
}
